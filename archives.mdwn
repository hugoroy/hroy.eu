[[!if test="enabled(sidebar)" then="""
[[!sidebar]]
""" else="""
[[!inline pages=sidebar raw=yes]]
"""]]
<!--[[!if test="archives/*" then="""
Browse through blog archives by year:
[[!map pages="./archives/* and !./archives/*/* and !*/Discussion"]]
"""
else="""
You need to use the `ikiwiki-calendar` program to generate calendar-based
archive pages.
"""]]-->

[[!meta title="Archives"]]

<div class="select-archive">
<div class="seeWhat">See:</div>
<div class="selectors btn-group" role="group">
  <button type="button" class="selector btn btn-default" data-toggle="collapse" data-target="#archives-bytags" data-parent="#select-archive">By Tags</button>
  <button type="button" class="selector btn btn-default" data-toggle="collapse" data-target="#archives-bydate" data-parent="#select-archive">By Date</button>
</div>
</div>

<div class="accordeon">
<div id="archives-bytags" class="collapse in">
[[!pagestats pages="./tags/*" among="*" style="list" show="40"]]
<span class="btn btn-default">[[All Tags|tags]]</span>
</div>

<div id="archives-bydate" class="collapse">
[[!map pages="page(./archives/*) and !*/Discussion" sort="-path"]]
</div>
</div>

<div class="select-archive">
<div class="seeWhat">See:</div>
<div class="selectors btn-group" role="group">
  <button type="button" class="selector btn btn-default" data-toggle="collapse" data-target="#archives-allposts" data-parent="#select-archive">All Posts</button>
</div>

<div class="accordeon">
<div id="archives-allposts" class="collapse in">
<h2>All blog posts</h2>
[[!inline pages="page(./posts/*) and !*/Discussion" archive=yes feedshow=0 quick=yes trail=no feeds=no]]
</div>
</div>
